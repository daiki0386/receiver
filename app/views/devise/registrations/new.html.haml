.signin-container
  .signin-container__main
    %h2.signin-container__title Receiver
    %div.signin-container__form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .form-group
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: " 氏名", class: "form-group__input"
        .form-group
          = f.text_field :postcode, autofocus: true, autocomplete: "postcode", placeholder: " 郵便番号", class: "form-group__input"
        .form-group
          = f.text_field :address, autofocus: true, autocomplete: "address", placeholder: " 住所", class: "form-group__input"
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " メールアドレス", class: "form-group__input"
        .form-group
          = f.password_field :password, autocomplete: "current-password", placeholder: " パスワード（6文字以上）", class: "form-group__input"
        .form-group
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " パスワード（確認のためもう一度）", class: "form-group__input"
        .submit-group
          = f.submit "新規会員登録", class: "submit-group__btn"
    %small.copyright © 2019 Receiver
